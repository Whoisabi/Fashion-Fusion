# Production environment configuration
# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/fashion

# Server
PORT=5000
NODE_ENV=production

# JWT Secrets (required)
JWT_ACCESS_SECRET=change_me_in_production
JWT_REFRESH_SECRET=change_me_in_production

# Cloudinary (required for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# API Base URL
API_BASE_URL=https://api.fashionfusion.com

# Frontend URL (for CORS)
FRONTEND_URL=https://fashionfusion.com

# Other production settings
ENABLE_HTTPS=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100