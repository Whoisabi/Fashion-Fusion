# Staging environment configuration
# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/fashion

# Server
PORT=5000
NODE_ENV=staging

# JWT Secrets (required)
JWT_ACCESS_SECRET=change_me_in_staging
JWT_REFRESH_SECRET=change_me_in_staging

# Cloudinary (required for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# API Base URL
API_BASE_URL=https://api-staging.fashionfusion.com

# Frontend URL (for CORS)
FRONTEND_URL=https://staging.fashionfusion.com