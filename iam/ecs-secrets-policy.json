{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowGetSecretValueForAppSecrets",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:us-east-1:<AWS_ACCOUNT_ID>:secret:fashion-fusion/*"
      ]
    }
  ]
}
